generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model GiftPage {
  id            String   @id @default(cuid())
  slug          String   @unique
  buyerName     String
  recipientName String
  message       String
  photos        String   // JSON string of paths
  package       String
  theme         String?
  createdAt     DateTime @default(now())
}
